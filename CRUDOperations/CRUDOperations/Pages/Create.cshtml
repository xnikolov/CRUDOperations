@page
@model CRUDOperations.Pages.CreateModel
@{
    ViewData["Title"] = "Create";
    
}

<h2>Create</h2>


<div class="form">
    <form class="vehAddForm" method="post">
        <section class="vehData">
            <h3 class="h3"><strong>Vehicle Data:</strong></h3>
            <br />

            <div asp-validation-summary="All"></div>

            <div> <input class="textbox" placeholder="Brand" asp-for="Customer.Name" /> </div>
            <span asp-validation-for="Customer.Name"></span>

            <div><input class="textbox" placeholder="Model" asp-for="Customer.Model" /></div>
            <span asp-validation-for="Customer.Model"></span>

            <div><input class="textbox" placeholder="Year" asp-for="Customer.Year" /></div>
            <span asp-validation-for="Customer.Year"></span>

            <div> <input class="textbox" placeholder="Engine" asp-for="Customer.Engine" /></div>
            <span asp-validation-for="Customer.Engine"></span>

            <div><input class="textbox" placeholder="HP" asp-for="Customer.Hp" /></div>
            <span asp-validation-for="Customer.Hp"></span>





            <input class="button" type="submit" name="submit" value="Go!" />


        </section>

        <style>
            .vehData {
                background-color: lightgray;
                width: 300px;
            }

            .textbox {
                width: 250px;
                float: left;
                padding: 10px;
                margin: 14px;
            }

            .h3 {
                margin: 5px;
                padding-top: 15px;
            }

            .button {
                padding: 6px;
                width: 80px;
                margin: 15px;
            }

            .vehAddForm {
                
            }

            .form 
            {
                background-color:dimgray;
            }
        </style>
    </form>
</div>

